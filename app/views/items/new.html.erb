<div class="search">
  <div class="row">
    <div class="text-center">
      <%= form_tag(new_item_path, method: :get, class: 'form-inline') do %>  <!-- モデルのインスタンスを指定せずに<form>タグを生成する場合は form_tag メソッドを使う -->
        <div class="form-group">
          <%= text_field_tag :keyword, @keyword, class: 'form-control input-lg', placeholder: "キーワードを入力", size: 40 %>  <!-- モデルのインスタンスを指定せずに<input>タグを生成する場合は test_field_tag メソッドを使う -->
        </div>
        <%= submit_tag '商品を検索', class: 'btn btn-success btn-lg' %>
      <% end %>
    </div>
  </div>
</div>

<%= render 'items', items: @items %>  <!-- 検索結果は別のviewにする -->
